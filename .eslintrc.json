{
  "extends" : [
    "strongloop",
    "plugin:css-modules/recommended"
  ],
  "parser" : "babel-eslint",
  "env" : { "es6" : true },
  "plugins" : [
    "css-modules"
  ],
  "ignorePatterns": ["dist/*.js"],
  "rules": {
   "css-modules/no-unused-class": [2, { "camelCase": true }],
   "css-modules/no-undef-class": [2, { "camelCase": true }]
 },
 "settings": {
   "css-modules": {
     "basePath": "app/scripts/..."
   }
 }
}
